<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdu.open.source.site.repository.TaskDao">

    <!-- 通用结果集映射 -->
    <resultMap id="BaseResultMap" type="com.sdu.open.source.site.entity.Task">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="task_name" property="taskName" jdbcType="VARCHAR"/>
        <result column="task_class" property="taskClass" jdbcType="BIGINT"/>
        <!-- 协议ID映射 -->
        <result column="task_protocol_id" property="taskProtocolId" jdbcType="BIGINT"/>
        <result column="task_description" property="taskDescription" jdbcType="LONGVARCHAR"/>
        <result column="task_status" property="taskStatus" jdbcType="INTEGER"/>
        <result column="collection_user" property="collectionUser" jdbcType="VARCHAR"/>
        <result column="collection_time" property="collectionTime" jdbcType="TIMESTAMP"/>
        <!-- 截止时间映射 -->
        <result column="deadline_time" property="deadlineTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="gitee_link" property="giteeLink" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 根据领取人姓名查询任务 -->
    <select id="findByCollectionUser" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM task
        WHERE collection_user = #{collectionUser} LIMIT #{offset}
            , #{pageSize}
    </select>

    <select id="findByTaskClass" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM task
        WHERE task_class = #{taskClass} LIMIT #{offset}
            , #{pageSize}
    </select>

    <select id="userTaskCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM task
        WHERE collection_user = #{collectionUser}
          AND task_status = #{taskStatus}
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT *
        FROM task
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="com.sdu.open.source.site.entity.Task">
        UPDATE task
        <set>
            <include refid="sqlFragment"/>
        </set>
        WHERE id = #{id}
    </update>

    <sql id="sqlFragment">
        <if test="taskStatus != null">task_status = #{taskStatus},</if>
        <!-- 新增：协议ID可更新 -->
        <if test="taskProtocolId != null">task_protocol_id = #{taskProtocolId},</if>
        <if test="collectionUser != null">collection_user = #{collectionUser},</if>
        <if test="collectionTime != null">collection_time = #{collectionTime},</if>
        <!-- 新增：截止时间可更新 -->
        <if test="deadlineTime != null">deadline_time = #{deadlineTime},</if>
        <if test="updateTime != null">update_time = #{updateTime}</if>
        <if test="giteeLink != null">gitee_link = #{giteeLink},</if>

    </sql>

    <select id="countTasksByCategoryId" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM task
        <where>
            task_class = #{categoryId}
        </where>
    </select>

    <select id="countTasksByCollectionUser" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM task
        <where>
            collection_user = #{user}
        </where>
    </select>

    <select id="selectTasksByParam" resultType="com.sdu.open.source.site.entity.Task">
        SELECT * FROM task
        <where>
            <if test="param.taskId != null">AND id = #{param.taskId}</if>
            <if test="param.taskName != null and param.taskName != ''">
                AND task_name LIKE CONCAT('%', #{param.taskName}, '%')
            </if>
            <if test="param.collectionUser != null and param.collectionUser != ''">
                AND collection_user LIKE CONCAT('%', #{param.collectionUser}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{start}, #{pageSize}
    </select>

    <select id="selectTaskVOByJoin" resultType="com.sdu.open.source.site.vo.AdminTaskVO">
        SELECT
        tu.id AS taskUserId,
        t.task_name AS taskName,
        tc.name AS taskClassName,
        u.fullname AS collectionUser,
        u.phone AS phone,
        u.email AS email,
        u.email2 AS email2,
        tu.collection_time AS collectionTime,
        t.create_time AS createTime,
        t.deadline_time AS deadlineTime,
        tu.task_status AS taskStatus,
        tu.result_link AS resultLink
        FROM
        task t
        INNER JOIN task_user tu
        ON t.id = tu.task_id
        INNER JOIN user u
        ON tu.user_id = u.id
        LEFT JOIN task_class tc
        ON t.task_class = tc.id
        <where>
            <if test="param.taskName != null and param.taskName != ''">
                AND t.task_name LIKE CONCAT('%', #{param.taskName}, '%')
            </if>
            <if test="param.collectionUser != null and param.collectionUser != ''">
                AND u.fullname LIKE CONCAT('%', #{param.collectionUser}, '%')
            </if>
            <if test="param.taskStatus != null">
                AND tu.task_status = #{param.taskStatus}
            </if>
        </where>
        ORDER BY
        t.create_time DESC,
        tu.collection_time DESC
        LIMIT #{start}, #{pageSize}
    </select>

    <select id="countTaskVOByJoin" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM
        task t
        INNER JOIN task_user tu
        ON t.id = tu.task_id
        INNER JOIN user u
        ON tu.user_id = u.id
        LEFT JOIN task_class tc
        ON t.task_class = tc.id
        <where>
            <if test="param.taskName != null and param.taskName != ''">
                AND t.task_name LIKE CONCAT('%', #{param.taskName}, '%')
            </if>
            <if test="param.collectionUser != null and param.collectionUser != ''">
                AND u.fullname LIKE CONCAT('%', #{param.collectionUser}, '%')
            </if>
            <if test="param.taskStatus != null">
                AND tu.task_status = #{param.taskStatus}
            </if>
        </where>
    </select>
</mapper>
