<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdu.open.source.site.repository.TaskDao">

    <!-- 通用结果集映射 -->
    <resultMap id="BaseResultMap" type="com.sdu.open.source.site.entity.Task">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="task_name" property="taskName" jdbcType="VARCHAR"/>
        <result column="task_class" property="taskClass" jdbcType="BIGINT"/>
        <result column="task_description" property="taskDescription" jdbcType="LONGVARCHAR"/>
        <result column="task_status" property="taskStatus" jdbcType="INTEGER"/>
        <result column="collection_user" property="collectionUser" jdbcType="VARCHAR"/>
        <result column="collection_time" property="collectionTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 根据领取人姓名查询任务 -->
    <select id="findByCollectionUser" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM
            task
        WHERE
            collection_user = #{collectionUser}
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="findByTaskClass" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM
            task
        WHERE
            task_class = #{taskClass}
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="userTaskCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM task
        WHERE
            collection_user = #{collectionUser}
          AND task_status = #{taskStatus}
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT *
        FROM
            task
        WHERE
            id = #{id}
    </select>

    <update id="update" parameterType="com.sdu.open.source.site.entity.Task">
        update task
        <set>
            <include refid="sqlFragment"/>
        </set>
        where id = #{id}
    </update>

    <sql id="sqlFragment">
        <if test="taskStatus != null">task_status = #{taskStatus},</if>
        <if test="collectionUser != null">collection_user = #{collectionUser},</if>
        <if test="collectionTime != null">collection_time = #{collectionTime},</if>
        <if test="updateTime != null">update_time = #{updateTime}</if>
    </sql>

    <select id="countTasksByCategoryId" resultType="java.lang.Long">
        select count(*)
        from task
        <where>
            task_class = #{categoryId}
        </where>
    </select>

    <select id="countTasksByCollectionUser" resultType="java.lang.Long">
        select count(*)
        from task
        <where>
            collection_user = #{user}
        </where>
    </select>
</mapper>
