<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdu.open.source.site.repository.MirrorDao">

    <select id="selectAll" resultType="com.sdu.open.source.site.entity.Mirror">
        select *
        from mirror
        <where>
            <if test="arch != null and arch != ''">
                arch = #{arch}
            </if>
            <if test="manufacturer != null and manufacturer != ''">
                AND manufacturer = #{manufacturer}
            </if>
            <if test="series != null and series != ''">
                AND series = #{series}
            </if>
        </where>
    </select>
</mapper>
