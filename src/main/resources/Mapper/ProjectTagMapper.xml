<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdu.open.source.site.repository.ProjectTagDao">

    <insert id="insert" parameterType="com.sdu.open.source.site.entity.ProjectTag">
        insert into project_tag (project_id, tag_id)
        values (#{projectId}, #{tagId})
    </insert>

    <select id="selectByProjectAndTagId" resultType="com.sdu.open.source.site.entity.ProjectTag">
        select project_id as projectId, tag_id as tagId
        from project_tag
        where project_id = #{projectId} and tag_id = #{tagId}
    </select>

    <delete id="deleteByProjectId" parameterType="java.lang.Long">
        delete from project_tag
        where project_id = #{projectId}
    </delete>

    <delete id="deleteByTagId" parameterType="java.lang.Long">
        delete from project_tag
        where tag_id = #{tagId}
    </delete>
</mapper>
